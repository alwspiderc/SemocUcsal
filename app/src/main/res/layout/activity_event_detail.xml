<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="0dp"
        android:background="@drawable/radius">

        <ImageView
            android:id="@+id/event_item_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
             />

        <TextView
            android:id="@+id/event_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Event Name"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/event_item_image"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/event_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Event Location"
            android:textSize="26sp"
            app:layout_constraintTop_toBottomOf="@id/event_item_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/event_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Event Date"
            android:textSize="26sp"
            app:layout_constraintTop_toBottomOf="@id/event_item_location"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/event_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/event_item_date"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/event_item_subscribe"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#4BD8ED"
            android:text="Inscrever-se"
            android:textColor="#08111C"
            app:layout_constraintTop_toBottomOf="@id/event_item_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>